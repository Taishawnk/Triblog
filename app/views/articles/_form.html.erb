<div class="container ">
    <div class="row justify-content-center ">
        <div class="col-10">
         <%=render 'shared/error'%>
            <div class="card text-center shadow mb-3 bg-white rounded">
                 <div class="card-header font-italic">
                  by <%= @article.user.username if @article.user%>
                  </div>  
                <%= form_with( model: @article, class: "shadow p-5 mb-3 bg-danger ", local: true) do |f|%>
                  
                <div class="form-group row">
                        <%=f.label :title, class: "col-2 col-form-label text-light"%>
                    <div class="col-10">
                        <%=f.text_field :title, class: "form-control", placeholder: "Title of article"  %>
                    </div>
                </div>

                <div class="form-group row">
                        <%=f.label :description, class:"col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, row: 10, class: "form-control shadow rounded", placeholder: "Description of article"   %>
                    </div>
                </div>

                <div class="form-group row justify-content-center ">
                    <%=f.submit class: "btn btn-outline-light btn-lg"%>
                </div>
                <% end %>
                </div>
        </div> 
                <div class="mb-3">
                     <%= link_to ' [Cancel and Return to Main page]', articles_path, class: "text-danger" %>
                </div>
               
    </div>    
</div>